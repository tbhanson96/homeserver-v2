{
  "name": "homeserver-server",
  "version": "0.0.1",
  "description": "",
  "author": "Tim Hanson",
  "license": "MIT",
  "scripts": {
    "build": "nest build && npm run swagger",
    "package": "nexe -t linux-x64-12.9.1 -i dist/main.js -o dist/server",
    "swagger": "node swagger-doc-gen.js",
    "start": "node dist/main.js",
    "start:dev": "npm run build && node dev-server.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "8.2.4",
    "@nestjs/core": "8.2.4",
    "@nestjs/jwt": "8.0.0",
    "@nestjs/microservices": "8.2.4",
    "@nestjs/passport": "8.0.1",
    "@nestjs/platform-express": "8.2.4",
    "@nestjs/swagger": "5.1.5",
    "@nestjs/websockets": "8.2.4",
    "@types/http-proxy": "1.17.8",
    "@types/http-proxy-middleware": "0.19.3",
    "@types/nodemailer": "6.4.4",
    "@types/tar": "6.1.1",
    "dotenv": "10.0.0",
    "epub": "1.2.1",
    "http-proxy-middleware": "2.0.1",
    "memfs": "3.4.1",
    "morgan": "1.10.0",
    "ncp": "2.0.0",
    "node-calibre": "2.1.1",
    "nodemailer": "6.7.2",
    "passport": "0.5.2",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.1",
    "swagger-ui-express": "4.3.0",
    "tar": "6.1.11"
  },
  "devDependencies": {
    "@nestjs/cli": "8.1.6",
    "@nestjs/testing": "8.2.4",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.0",
    "@types/morgan": "1.9.3",
    "@types/multer": "1.4.7",
    "@types/node": "17.0.5",
    "@types/passport-jwt": "3.0.6",
    "@types/passport-local": "1.0.34",
    "@types/supertest": "2.0.11",
    "jest": "27.4.5",
    "mkdirp": "1.0.4",
    "nexe": "3.3.7",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "supertest": "6.1.6",
    "ts-jest": "27.1.2",
    "ts-loader": "9.2.6",
    "ts-node": "10.4.0",
    "tsc-watch": "4.6.0",
    "tsconfig-paths": "3.12.0",
    "tslint": "5.20.1",
    "typescript": "4.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
