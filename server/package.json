{
  "name": "homeserver-server",
  "version": "0.0.1",
  "description": "",
  "author": "Tim Hanson",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && npm run swagger",
    "build:prod": "npm run build && mkdirp ../dist/env && ncp env/default.prod.env ../dist/env/default.env && nexe -t linux-x64 dist/main.js -o ../dist/server",
    "swagger": "node swagger-doc-gen.js",
    "start": "node dist/main.js",
    "start:dev": "npm run build && node dev-server.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/microservices": "^6.6.7",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/websockets": "^6.6.7",
    "dotenv": "^8.1.0",
    "morgan": "^1.9.1",
    "ncp": "^2.0.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.0.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.11.0",
    "@nestjs/testing": "^6.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/morgan": "^1.7.37",
    "@types/multer": "^1.3.10",
    "@types/node": "11.13.4",
    "@types/passport-jwt": "^3.0.2",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "2.0.7",
    "mkdirp": "^0.5.1",
    "nexe": "^3.3.2",
    "jest": "24.7.1",
    "prettier": "1.17.0",
    "rimraf": "^2.6.2",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-loader": "^6.2.1",
    "ts-node": "8.1.0",
    "tsc-watch": "^4.0.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
